<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:gravity="center_vertical"
    android:background="@drawable/layout_adapter_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/totalPercent"
        android:layout_alignParentStart="true"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:background="@drawable/layout_adapter_start_bg"
        android:text="69"
        android:textColor="@color/textPrimaryLight"
        android:textSize="@dimen/_20ssp" />

    <TextView
        android:id="@+id/historyDate"
        android:layout_toEndOf="@+id/totalPercent"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 Sept 2020"
        android:textColor="@color/textPrimaryLight"
        android:textSize="@dimen/_16ssp" />

    <TextView
        android:id="@+id/historyTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_below="@+id/historyDate"
        android:layout_toEndOf="@+id/totalPercent"
        android:text="0%"
        android:textColor="@color/textPrimaryLight"
        android:textSize="@dimen/_16ssp" />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_below="@+id/historyDate"
        android:layout_toEndOf="@+id/historyTo"
        android:text="-"
        android:textColor="@color/textPrimaryLight"
        android:textSize="@dimen/_16ssp" />

    <TextView
        android:id="@+id/historyFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/historyDate"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_toEndOf="@+id/to"
        android:text="100%"
        android:textColor="@color/textPrimaryLight"
        android:textSize="@dimen/_16ssp" />

</RelativeLayout>